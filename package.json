{
  "name": "faranuxinventory",
  "version": "1.0.10",
  "description": "Faranux Inventory MIS",
  "appId": "com.faranux.inventorymis",
  "main": "src/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "publish": "electron-builder --win --publish always",
    "release": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "build:test": "electron-builder --win --publish never"
  },
  "keywords": [
    "inventory",
    "management",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/faranux-electronics/inventory-desktop-app.git"
  },
  "build": {
    "appId": "com.faranux.inventorymis",
    "productName": "Faranux Inventory",
    "files": [
      "**/*",
      ".env"
    ],
    "compression": "normal",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "buildResources/logo.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inventory Manager",
      "deleteAppDataOnUninstall": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "buildResources"
    },
    "publish": {
      "provider": "github",
      "owner": "faranux-electronics",
      "repo": "inventory-desktop-app"
    }
  },
  "author": "Faranux Dev Team",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
